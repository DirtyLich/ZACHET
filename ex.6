#include <stdio.h>
#include <string.h>

/**
 * Функция, которая удаляет из строки все гласные латинские буквы
 * @param str Входная строка
 * @return Измененная строка без гласных букв
 */
char* removeVowels(char *str) {
    // Определяем массив гласных букв
    char vowels[] = "AEIOUaeiou";
    // Вычисляем длину строки
    int len = strlen(str);
    // Проходим по всем символам строки
    for (int i = 0; i < len; i++) {
        // Проверяем, является ли текущий символ гласной буквой
        for (int j = 0; j < 10; j++) {
            if (str[i] == vowels[j]) {
                // Если символ является гласной буквой, удаляем его из строки
                memmove(&str[i], &str[i + 1], len - i);
                len--;
                i--;
                break;
            }
        }
    }
    // Возвращаем измененную строку без гласных букв
    return str;
}

int main() {
    // Создаем строку для тестирования функции
    char str[] = "Hello World!";
    // Вызываем функцию для удаления гласных букв из строки
    removeVowels(str);
    // Выводим измененную строку на экран
    printf("%s", str);
    // Возвращаем 0 для успешного завершения программы
    return 0;
}
