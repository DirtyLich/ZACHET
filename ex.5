#include <stdio.h>

/**
 * Функция для произведения всех нечетных чисел во входном массиве
 * @param arr Входной массив
 * @param size Размер входного массива
 * @return Произведение нечетных чисел во входном массиве
 */
int multiplyOdd(int arr[], int size) {
    // Инициализируем переменную для хранения произведения нечетных чисел
    int product = 1;
    
    // Проходим по всем элементам массива
    for (int i = 0; i < size; i++) {
        // Проверяем, является ли текущий элемент нечетным
        if (arr[i] % 2 != 0) {
            // Если элемент нечетный, умножаем его на текущее значение произведения
            product *= arr[i];
        }
    }
    
    // Возвращаем результат
    return product;
}

int main() {
    // Создаем массив для тестирования функции
    int arr[] = {2, 3, 4, 5, 6, 7, 8, 9, 10};
    // Вычисляем размер массива
    int size = sizeof(arr) / sizeof(arr[0]);
    // Вызываем функцию для произведения нечетных чисел в массиве
    int result = multiplyOdd(arr, size);
    // Выводим результат на экран
    printf("Произведение нечетных чисел в массиве: %d", result);
    // Возвращаем 0 для успешного завершения программы
    return 0;
}
